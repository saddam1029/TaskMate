<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>
    <!-- Bottom and Right Border (White) -->
    <item>
        <shape>
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="1dp"
                android:color="@android:color/transparent"
/>
            <padding
                android:right="-1dp"
                android:left="-1dp"
                android:top="-1dp" />
        </shape>
    </item>
    <!-- Top and Left Border (Black) -->
    <item>
        <shape>
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="1dp"
                android:color="@color/white"
                android:dashWidth="0dp"
                android:dashGap="0dp"/>
            <padding

                android:bottom="@dimen/_1sdp" />
        </shape>
    </item>
</layer-list>
